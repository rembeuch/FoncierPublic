<div class="container">
  <%= link_to flats_path,  class: 'btn btn-light-ghost back-btn' do %>
    <i class="fas fa-angle-double-left"></i>
    <span>Retour</span>
  <% end %>
  <div class="card-trip show-container card-trip-flat">
    <%= cl_image_tag @flat.photo, crop: :fill%>
    <div class="card-trip-infos card-trip-flat">
      <div>
        <h2><%= @flat.title %></h2>
        <h3><i class="fas fa-map-marker-alt"></i> <%= @flat.address %></h2>
        <h3><%= @flat.square_meter %>m2 - <%= @flat.capacity %>/pers</h3>
        <p><%= @flat.description %></p>
      </div>
      <h2 class="card-trip-pricing"><%= @flat.price_per_day %>â‚¬ / jour</h2>
    </div>
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <% if @flat.owner == current_user %>
      <% else %>
      <h2>Je choisi mes dates :</h2>
      <br>
      <%= simple_form_for [@flat, @reservation] do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Valider", class: "reservation-submit btn btn-ghost btn-hover-green" %>
      <% end %>
    </div>
  </div>
</div>





