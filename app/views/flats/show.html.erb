    </div>

<div class="container">
<h1>Je choisi mes dates :</h1>
  <%= simple_form_for [@flat, @reservation] do |f| %>
      <%= f.input :start_date, as: :date %>
      <%= f.input :end_date, as: :date %>
      <%= f.button :submit, class: 'btn btn-primary btn-primary-flat' %>
</div>

<% end %>


